:root {
  /* Fondos - Modo Claro (Gris suave profesional) */
  --bg-primary: rgb(250 250 250);        /* Gris ultra claro - más suave que blanco */
  --bg-secondary: rgb(245 245 245);      /* Gris muy claro */
  --bg-sidebar: rgb(255 255 255);        /* Blanco puro para sidebar */
  --bg-card: rgb(255 255 255);           /* Blanco puro para tarjetas */
  
  /* Textos - Modo Claro (Máximo contraste) */
  --text-primary: rgb(17 24 39);         /* gray-900 - Negro profundo */
  --text-secondary: rgb(55 65 81);       /* gray-700 - Gris oscuro */
  --text-muted: rgb(107 114 128);        /* gray-500 - Gris medio */
  
  /* Bordes - Modo Claro (Sutiles y profesionales) */
  --border-color: rgb(229 231 235);      /* gray-200 */
  --border-hover: rgb(209 213 219);      /* gray-300 */
  
  /* Acentos - Modo Claro (Verde sutil y profesional) */
  --accent-primary: rgb(16 185 129);     /* emerald-500 */
  --accent-primary-hover: rgb(5 150 105); /* emerald-600 */
  --accent-secondary: rgb(100 116 139);   /* slate-500 - Gris neutro */
  --accent-secondary-hover: rgb(71 85 105); /* slate-600 */
  
  /* Headings - Modo Claro (Gris oscuro en lugar de verde) */
  --heading-color: rgb(30 41 59);        /* slate-800 - Profesional */
  --heading-h1-color: rgb(15 23 42);     /* slate-900 - Muy oscuro */
  
  /* Éxito/Error/Warning */
  --success-color: rgb(34 197 94);       /* green-500 */
  --error-color: rgb(239 68 68);         /* red-500 */
  --warning-color: rgb(245 158 11);      /* amber-500 */
  
  --header-height: 56px; /* Altura compacta del header */
}

