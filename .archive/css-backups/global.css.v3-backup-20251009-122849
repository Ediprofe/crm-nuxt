.prose tbody tr:hover {
  background-color: var(--bg-secondary);
}

/* ============================================================================
   WRAPPER MÓVIL - APLICADO DINÁMICAMENTE POR JAVASCRIPT
   ============================================================================ */

/**
 * Contenedor wrapper para tablas en móvil
 * Esta clase es agregada dinámicamente por JavaScript en viewports < 768px
 * 
 * CARACTERÍSTICAS:
 * - Overflow horizontal para scroll
 * - Full-width en móvil
 * - Scroll suave touch-enabled
 */
.table-wrapper-mobile {
  /* Permitir scroll horizontal */
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  
  /* Márgenes para breakout full-width */
  margin-left: -1rem;
  margin-right: -1rem;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  
  /* Padding interno para compensar márgenes negativos */
  padding-left: 1rem;
  padding-right: 1rem;
  
  /* Scrollbar personalizado */
  scrollbar-width: thin;
  scrollbar-color: var(--accent-primary) transparent;
}

/**
 * Scrollbar personalizado para navegadores Webkit (Chrome, Safari, Edge)
 */
.table-wrapper-mobile::-webkit-scrollbar {
  height: 6px;
}

.table-wrapper-mobile::-webkit-scrollbar-track {
  background: transparent;
}

.table-wrapper-mobile::-webkit-scrollbar-thumb {
  background-color: var(--accent-primary);
  border-radius: 3px;
}

.table-wrapper-mobile::-webkit-scrollbar-thumb:hover {
  background-color: var(--accent-primary-hover);
}

/**
 * Tabla dentro del wrapper móvil
 * Mantiene su ancho natural, permitiendo scroll si excede el viewport
 */
.table-wrapper-mobile table {
  /* Eliminar márgenes para evitar espaciado doble */
  margin: 0;
  
  /* Permitir que la tabla expanda naturalmente */
  width: auto;
  min-width: 100%;
  
  /* Ajustar bordes para full-width */
  border-radius: 0;
  border-left: none;
  border-right: none;
}

/* ============================================================================
   OPTIMIZACIONES PARA MÓVIL
   Media queries aplicadas SOLO a elementos dentro de wrapper
   ============================================================================ */

@media (max-width: 767px) {
  /**
   * Ajustes de tamaño para mejor legibilidad en pantallas pequeñas
   */
  .table-wrapper-mobile table {
    font-size: 0.8rem;
  }
  
  .table-wrapper-mobile th,
  .table-wrapper-mobile td {
    padding: 0.5rem 0.4rem;
    font-size: 0.8rem;
  }
  
  /**
   * Permitir que los headers hagan wrap si es necesario
   * Mejora la legibilidad en columnas estrechas
   */
  .table-wrapper-mobile th {
    white-space: normal;
    line-height: 1.3;
  }
  
  /**
   * Ajustar line-height para mejor legibilidad en móvil
   */
  .table-wrapper-mobile td {
    line-height: 1.4;
  }
}

/**
 * Dispositivos muy pequeños (<360px)
 * Ajustes adicionales para pantallas extra pequeñas
 */
@media (max-width: 359px) {
  .table-wrapper-mobile table {
    font-size: 0.75rem;
  }
  
  .table-wrapper-mobile th,
  .table-wrapper-mobile td {
    padding: 0.4rem 0.3rem;
    font-size: 0.75rem;
  }
}

/* ============================================================================
   DESKTOP/TABLET - TABLAS SIN WRAPPER
   ============================================================================ */

/**
 * En desktop y tablet, las tablas NO tienen wrapper
 * Estos estilos aseguran que las tablas se vean bien sin el wrapper
 */
@media (min-width: 768px) {
  /**
   * Tabla en desktop: renderizado nativo sin modificaciones
   * El navegador maneja la alineación de columnas nativamente
   */
  .prose table {
    display: table; /* Forzar display nativo */
  }
  
  .prose thead {
    display: table-header-group;
  }
  
  .prose tbody {
    display: table-row-group;
  }
  
  .prose tr {
    display: table-row;
  }
  
  .prose th,
  .prose td {
    display: table-cell;
    white-space: nowrap; /* Evitar wrap en desktop */
  }
}

/**
 * Tablet (768px - 1023px)
 * Permitir scroll horizontal si la tabla es muy ancha
 */
@media (min-width: 768px) and (max-width: 1023px) {
  /**
   * Si una tabla es muy ancha en tablet, permitir scroll
   * pero SOLO si excede el ancho del contenedor
   */
  .prose table {
    max-width: 100%;
  }
}

/* ============================================================================
   SCROLLBAR PERSONALIZADO PARA TABLAS SIN WRAPPER (DESKTOP)
   ============================================================================ */

/**
 * Si una tabla en desktop tiene overflow (casos raros),
 * aplicar scrollbar personalizado
 */
@media (min-width: 768px) {
  .prose table::-webkit-scrollbar {
    height: 8px;
  }

  .prose table::-webkit-scrollbar-track {
    background: var(--bg-secondary);
    border-radius: 4px;
  }

  .prose table::-webkit-scrollbar-thumb {
    background-color: var(--accent-primary);
    border-radius: 4px;
  }

  .prose table::-webkit-scrollbar-thumb:hover {
    background-color: var(--accent-primary-hover);
  }
}

